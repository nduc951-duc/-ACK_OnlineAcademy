<div class="card">
     <h5 class="card-header d-flex justify-content-between align-items-center">
        Quản Lý Lĩnh Vực
        <a class="btn btn-primary" href="/admin/categories/add" role="button">
            <i class="bi bi-plus-circle"></i>
            Thêm Lĩnh Vực
        </a>
    </h5>
    <div class="card-body">
        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Tên Lĩnh Vực</th>
              <th scope="col" class="text-end">Hành động</th>
            </tr>
          </thead>
          <tbody>
            {{#each this.categories}}
            <tr>
              <th scope="row">{{id}}</th>
              <td>{{name}}</td>
              <td class="text-end">
                <a class="btn btn-sm btn-outline-primary" href="/admin/categories/edit/{{id}}" role="button">
                  <i class="bi bi-pencil-square"></i> Sửa
                </a>
              </td>
            </tr>
            {{/each}}

            {{#if this.categories.length === 0}}
              <tr>
                <td colspan="3" class="text-center">Chưa có lĩnh vực nào.</td>
              </tr>
            {{/if}}
          </tbody>
        </table>
    </div>
</div>